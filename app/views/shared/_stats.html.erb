<% @user ||= current_user  %>

<div class="stats">
	<a href="<%= following_user_path(@user)%>">
		<strong id="following" class="start">
			<%= @user.followed_users.count %>
		</strong>
		following
	</a>

	<a href="<%= followers_user_path(@user)%>">
		<strong id="followers" class="start">
			<%= @user.followers.count %>
		</strong>
		followers
	</a>
</div>